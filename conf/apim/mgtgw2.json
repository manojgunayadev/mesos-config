{
	"id": "mgtgw2.api",
	"cpus": 1,
	"mem": 2048,
	"instances": 1,
	"container": {
		"type": "DOCKER",
		"docker": {
			"image": "apim:latest",
			"network": "BRIDGE",
              "portMappings": [
                {
                  "containerPort": 9443,
                  "hostPort": 31110,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 9763,
                  "hostPort": 31210,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 8280,
                  "hostPort": 31310,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 8243,
                  "hostPort": 31410,
                  "protocol": "tcp"
                },
                {
                  "containerPort": 4000,
                  "hostPort": 31510,
                  "protocol": "tcp"
                }
              ],
                "parameters": [{
                "key": "dns",
                "value": "192.168.54.209"
            }]
		}
	},
	"env": {
		"MYSQL_ROOT_PASSWORD": "password",
		 "APIM_NODE": "apimanager::gateway",
         "MYSQL_PORT_3306_TCP_ADDR": "mysql.marathon.slave.mesos.",
