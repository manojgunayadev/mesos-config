         "LOCAL_MEMBER_HOST" : "mgtgw2.api.marathon.slave.mesos.",
         "LOCAL_MEMBER_PORT" : "31510",
         "MEMBER1_HOST" : "gw1.api.marathon.slave.mesos.",
         "MEMBER1_PORT" : "31520",
         "MEMBER2_HOST" : "mgtgw1.api.marathon.slave.mesos.",
         "MEMBER2_PORT" : "31500",
         "MGT_HOST_NAME" : "mgt.api.verizon.com",
         "SUB_CLUSTER_DOMAIN" : "mgt",
         "FACTER_fqdn" : "apimanager",
         "PROFILE_NAME" : "gateway-manager"         
	},
      "minimumHealthCapacity" :0,
      "maximumOverCapacity" : 0.0
}